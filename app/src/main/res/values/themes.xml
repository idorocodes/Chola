<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/spacegrotesk_regular</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/spacegrotesk_regular</item>
        <item name="android:textSize">10sp</item>

    </style>


    <style name="Theme.NewApp" parent="Base.Theme.NewApp" />

    <!-- Splash Screen theme. -->
    <style name="Theme.NewApp.Splash" parent="Base.Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/app_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.NewApp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="colorOutline">@color/white</item>
    </style>

</resources>