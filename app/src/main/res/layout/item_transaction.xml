<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#1F2235">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/txIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:src="@drawable/send_money"
            app:tint="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sent Money"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/spacegrotesk_semibold" />

            <TextView
                android:id="@+id/txDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 Dec 2023"
                android:textColor="@color/mini_white"
                android:textSize="12sp"
                android:alpha="0.7"
                android:fontFamily="@font/spacegrotesk_regular" />
        </LinearLayout>

        <TextView
            android:id="@+id/txAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-â‚¦5,000"
            android:textColor="#FF5252"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/spacegrotesk_semibold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>